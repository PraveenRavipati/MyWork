package com.inteended.io;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;
import java.util.Scanner;

public class BufferedReaderExample {

	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		/* StringBuilder sp=new StringBuilder(); */
		BufferedReader br = null;
		try {
			String sCurrentLine;
			String path = null;
			System.out.print("\nEnter The Path of the File:");
			path = s.next();
			br = new BufferedReader(new FileReader(path));
			int controlDepth = 0;
			while ((sCurrentLine = br.readLine()) != null) {
				int i = 0, j = 0;
				// System.out.println(sCurrentLine.length());
				while (i < sCurrentLine.length()) {
					if ((sCurrentLine.charAt(i) == '{')) {

						if ((0 < controlDepth)) {
							j = 0;
							while (j < controlDepth) {
								j++;
								System.out.print(" ");
							}
						}
						controlDepth = controlDepth + 1;
						i++;
					} else if (((sCurrentLine.charAt(i)) == '}')) {
						controlDepth = controlDepth - 1;
						if ((controlDepth > 0)) {

							j = 0;
							while (j < controlDepth) {
								j++;
								System.out.print(" ");
							}
						}
						i++;
					} else if ((i == 0)) {
						j = 0;
						while (j < controlDepth) {
							j++;
							System.out.print(" ");
						}
						i++;

					} else {
						i++;
					}

				}
				System.out.println(sCurrentLine);

			}

		} catch (IOException e) {
			e.printStackTrace();
		} finally {
			try {
				if (br != null)
					br.close();
			} catch (IOException ex) {
				ex.printStackTrace();
			}
		}

	}
}