<script type="text/javascript">

function onSubmit() {
    var firstname = document.f1.uname.value;
    if (firstname == "") {
        alert("Please enter first name...");
        document.f1.uname.focus();
        return false;
    }
    var pwd = document.f1.pwd.value;
    if(pwd == ""){
        alert("please enter password!!");
        return false;
    }
    else{
    	   return( true );
    	    }
    }
</script>
