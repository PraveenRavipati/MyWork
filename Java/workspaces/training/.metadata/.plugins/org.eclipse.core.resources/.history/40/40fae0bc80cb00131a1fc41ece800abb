package com.theard.basics;

public class LifeCycle {

	public static void main(String[] args) {
		int n=10;
		MyThread m[]=new MyThread[n];
		for(int i=0;i<n;i++)
		{
			m[i]=new MyThread();
			m[i].start();
		}
	}

}
class MyThread extends Thread
{
	private int i;
	private void incrI() {
		i++;
	}
	private int getI() {
		return i;
	}
	public void run() {
		int j=0,k=0;
		for(j=0;j<100;j++)
		{
			if(j==i)
			{
				try {
					sleep(2000);
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}
			incrI();
			System.out.println("When j:"+j+" i:"+getI()+" Thread name"+this.getName());
		}
		for(k=0;k<100;k++)
		{
			if((k==j)||(k==i))
			{
				try {
					sleep(2000);
				} catch (InterruptedException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
			}
			incrI();
			System.out.println("when k:"+k+" i:"+getI()+" Thread name"+this.getName());
		}
		
	}
}
