package com.theard.basics;

public class Lifecycle {

	public static void main(String[] args) {
		MyTheard m[]=new MyTheard[2];
		for(int i=0;i<2;i++)
		{
			m[i]=new MyTheard();
			m[i].start();
		}
	}

}
class MyThread extends Thread
{
	private int i=0;
	private void incrI() {
		i++;
	}
	private int getI() {
		return i;
	}
	public void run() {
		for(int j=0;j<10;j++)
		{
			incrI();
			System.out.println("When j:"+j+" i:"+getI()+" Thread name");
		}
		for(int k=0;k<10;k++)
		{
			incrI();
			System.out.println("when k:"+k+" i:"+getI());
		}
		
	}
}